<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                Clothes store
            </h1>
            <p class="lead">
                Wear comfortable clothes
            </p>
            <form action="/charge" method="POST">
                <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="{{publishKey}}"
                        data-amount="5000"
                        data-name="Clothes"
                        data-description="new brand"
                        data-locale="auto">
                </script>
                <script>
                    document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                </script>
                <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase For $50</button>
            </form>

        </div>
        <div class="col-md-6">
            <img src="/img/Jacket.png" alt="" class="img-fluid">
        </div>
    </div>
</section>
